{
  "name": "typescript-playground",
  "version": "0.1.0",
  "description": "A (simple) way to bootstrap a TypeScript playground equipped with ESLint, Jest, Babel & Parcel",
  "author": "Ethan N.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethan605/typescript-playground"
  },
  "scripts": {
    "prebuild": "jest",
    "build": "gulp build",
    "build:declaration": "tsc --project tsconfig.declaration.json",
    "console": "babel-node --extensions \".ts\"",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/gulp": "^4.0.6",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.138",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-exec": "^5.0.0",
    "jest": "^26.4.2",
    "lodash": "^4.17.19",
    "parcel-bundler": "^1.12.3",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.(ts|tsx|json)": [
      "prettier --write"
    ]
  }
}
